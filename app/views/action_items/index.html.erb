<table border="0" cellspacing="5" cellpadding="5">
  <tr><th>Header</th></tr>

  <% @action_items.each do |action_item| %>
    <tr>
      <td>
        <%= action_item.priority %>
      </td>
      <td>
        <%= action_item.assignee %>
      </td>
      <td>
        <%= action_item.id %>
      </td>
      <td>
        <%= action_item.ci %>
      </td>
      <td>
        <%= action_item.description %>
      </td>
      <td>
        <%= action_item.closure_criteria %>
      </td>
      <td>
        <%= action_item.due %>
      </td>
      <td>
        <%= link_to "Edit Action Item", edit_action_item_path(action_item) %>
      </td>
    </tr>
  <% end %>
</table>

